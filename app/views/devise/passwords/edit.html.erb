                <li>
                  <!-- PORTFOLIO -->
                  <%= link_to "PORTFOLIO" ,root_path(:anchor=> "portfolio") %>
                </li>
                <li>
                  <!-- NEWS -->
                  <%= link_to "NEWS" ,root_path(:anchor=> "news") %>
                </li>
                <li>
                  <!-- CLIENTS -->
                  <%= link_to "CLIENTS" ,root_path(:anchor=> "clients") %>
                </li>
                <li>
                  <!-- CONTACT -->
                  <%= link_to "CONTACT" ,root_path(:anchor=> "contact") %>
                </li>
                <% if user_signed_in? && current_user.supervisor_role? %>
								<li><!-- LOGOUT -->
									<%= link_to "LOGOUT", destroy_user_session_path, method: :delete %>
								</li>
								<li><!-- ADMIN -->
									<%= link_to "ADMIN", rails_admin_url %>
								</li>
                <% elsif user_signed_in? %>
                  <li><!-- LOGOUT -->
                    <%= link_to "LOGOUT", destroy_user_session_path, method: :delete %>
                  </li>
                <% else %>
                  <li><!-- LOGIN -->
                    <%= link_to "LOGIN", new_user_session_path %>
                  </li>
                <% end %>
              </ul>

            </nav>
          </div>
      </div>
    </header>
    <!-- /Top Nav -->
  </div>

  <section id="slider" class="fullheight">

    <div class="swiper-wrapper">

        <div class="overlay dark-5" style="background-image: url(<%= image_path "elevator_buttons.jpg"%>);">
        <div class="display-table">
          <div class="display-table-cell vertical-align-middle">
            <div class="container">

              <div class="row">
                <div class="text-center col-md-8 col-12 offset-md-2">

<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="field" style=color:white>
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password" %>
  </div>

  <div class="field" style=color:white>
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions" style=color:white>
    <%= f.submit "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
